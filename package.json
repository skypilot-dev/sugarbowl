{
  "name": "@skypilot/sugarbowl",
  "version": "3.4.0",
  "description": "A collection of convenience functions for JavaScript & TypeScript",
  "keywords": [
    "arrays",
    "functions",
    "javascript",
    "objects",
    "strings",
    "typescript",
    "utility"
  ],
  "homepage": "https://github.com/skypilot-dev/sugarbowl#readme",
  "bugs": {
    "url": "https://github.com/skypilot-dev/sugarbowl/issues"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/skypilot-dev/sugarbowl.git"
  },
  "license": "ISC",
  "author": {
    "name": "William Thorsen",
    "email": "william@thorsen.dev"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "scripts": {
    "all-ci-checks": "nr all-cq-checks && nr build",
    "build": "rm -rf lib && nr compile-ts",
    "check": "nr typecheck && nr lint --quiet && nr test",
    "ci": "nr all-ci-checks",
    "compile-ts": "babel ./src --out-dir ./lib --extensions .ts --ignore '**/__tests__/*' --ignore '**/*.d.ts' && nr generate-typings",
    "generate-typings": "tsc --project tsconfig.generate-typings.json",
    "lint": "eslint --cache '**/*.{js,ts}'",
    "lint:fix": "eslint --fix '**/*.{js,ts}'",
    "prepublishOnly": "nr typecheck && nr lint --quiet && nr test && nr build",
    "publish:default": "na publish --non-interactive",
    "tc": "nr typecheck",
    "test": "vitest --config vitest.standalone.config.ts",
    "test:all": "vitest --config vitest.config.ts",
    "test:int": "vitest --config vitest.integration.config.ts",
    "typecheck": "tsc"
  },
  "dependencies": {
    "json-beautify": "^1.1.1",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/node": "20.16.11",
    "@vitest/coverage-v8": "2.1.2",
    "@williamthorsen/eslint-config-typescript": "1.0.0",
    "eslint": "^9.12.0",
    "tsx": "4.19.1",
    "type-fest": "^4.26.1",
    "typescript": "5.6.3",
    "vitest": "2.1.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
